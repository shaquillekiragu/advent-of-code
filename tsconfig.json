{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES2020"],
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"declaration": false,
		"declarationMap": false,
		"sourceMap": false
	},
	"include": ["./tasks/**/*.ts", "./data/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
